    "target": "es5",
    "module": "commonjs",
    "outDir": "../dist",
    "strict": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
  },
  
  "include": [
    "./src/**/*",
    "main.ts",
    "preload.ts"
  ],
  "exclude": [
    "node_modules",
    "./src/**/*.spec.ts"
  ]
}